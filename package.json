{
  "name": "electron-sveltekit-typescript",
  "version": "1.0.0",
  "description": "A template for Electron with SvelteKit and TypeScript",
  "scripts": {
    "dev": "concurrently -n=svelte,electron -c=orange,blue \"npm run svelte:dev\" \"npm run electron\"",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "svelte:dev": "cd svelte && npm run dev",
    "svelte:build": "cd svelte && npm run build",
    "electron": "npm run build && electron ./dist/main.js"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "concurrently": "^7.5.0",
    "electron": "^21.2.0",
    "eslint": "^7.32.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-reloader": "^1.2.3",
    "electron-serve": "^1.1.0",
    "electron-window-state": "^5.0.3",
    "express": "^4.18.2"
  }
}
